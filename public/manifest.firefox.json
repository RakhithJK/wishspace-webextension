{
  "manifest_version": 2,

  "name": "Wishing Space Extension",
  "short_name": "Wishing Space",
  "description": "Cette extension permet de rajouter facilement des souhaits sur le site de Wishing.space",
  "version": "2.1.1",
  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "author": "Anselme Chorein",
  "homepage_url": "https://www.wishing.space",
  "applications": {
    "gecko": {
      "id": "contact@wishing.space",
      "strict_min_version": "57.0"
    }
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Ajouter un souhait Ã  votre liste Wishing Space"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://api.wishing.space/*"
  ]
}